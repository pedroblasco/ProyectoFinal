<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >
    
   	<TextView
   	    android:id="@+id/textIdioma"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentTop="true"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="6dp"
   	    android:text="TextView"
   	    android:textColor="#ffffff"
   	    android:textSize="20sp" />

    <Spinner
        android:id="@+id/changeLanguage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textIdioma"
        android:layout_marginTop="6dp" />

    <Spinner
        android:id="@+id/setDifficulty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textDificultad"
        android:layout_marginTop="6dp" />
        
    <Spinner
        android:id="@+id/setInstrument"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textInstrumento"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/textDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setInstrument"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textInstrumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/changeLanguage"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>