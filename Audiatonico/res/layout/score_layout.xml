<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <ImageButton
        android:id="@+id/botonDosJug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/boton_dosjugadores_estilo" />

    <ImageButton
        android:id="@+id/botonUnJug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonDosJug"
        android:layout_alignLeft="@+id/botonDosJug"
        android:layout_marginBottom="46dp"
        android:background="@drawable/boton_unjugador_estilo" />

    <TextView
        android:id="@+id/textoPuntu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonUnJug"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:text="Puntuaciones"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:id="@+id/vistaPuntu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:visibility="visible" >

        <TextView
            android:id="@+id/numRondasNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numRondasText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/botonFacil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/boton_facil_estilo" />

        <TextView
            android:id="@+id/numPorcenNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numPorcenText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/rondasMejNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/rondasMejText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rondasMejNum"
            android:layout_marginBottom="28dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/numPorcenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rondasMejNum"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/botonMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/botonFacil"
            android:layout_centerHorizontal="true"
            android:background="@drawable/boton_media_estilo" />

        <ImageButton
            android:id="@+id/botonDificil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/botonMedio"
            android:layout_marginRight="27dp"
            android:background="@drawable/boton_dificil_estilo" />

        <TextView
            android:id="@+id/numRondasText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/botonMedio"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
